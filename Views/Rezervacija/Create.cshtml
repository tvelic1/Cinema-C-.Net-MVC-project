@model OOAD_G6_najjaci_tim.Models.Rezervacija

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Rezervacija</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdKorisnikSaNalogom" class="control-label"></label>
                <input type="text" asp-for="IdKorisnikSaNalogom" class="form-control" readonly="readonly" value="@ViewData["IdKorisnikSaNalogom"]" />
            </div>
            <div class="form-group">
                <label asp-for="IdFilm" class="control-label"></label>
                <input type="text" asp-for="IdFilm" class="form-control" readonly="readonly" value="@ViewData["IdFilm"]" />
            </div>
            <div class="form-group">
                <label asp-for="Film.Ime" class="control-label"></label>
                <input type="text" asp-for="Film.Ime" class="form-control" readonly="readonly" value="@ViewData["Film"]" />
            </div>

            <input type="hidden" name="idKorisnikSaNalogom" value="@ViewData["IdKorisnikSaNalogom"]" />
            <input type="hidden" name="idFilm" value="@ViewData["IdFilm"]" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
