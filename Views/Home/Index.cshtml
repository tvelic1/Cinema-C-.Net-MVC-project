<style>
    body {
        background-color: #f8f9fa;
    }

    .jumbotron {
        background-color: #007bff;
        color: #fff;
        padding: 100px;
    }

        .jumbotron h1 {
            font-size: 48px;
        }

        .jumbotron p {
            font-size: 24px;
            margin-bottom: 30px;
        }

    .btn-go-to-login {
        font-size: 24px;
        padding: 15px 30px;
    }
