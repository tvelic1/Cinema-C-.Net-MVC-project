@model OOAD_G6_najjaci_tim.Models.Film

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Film</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control" required />
                <span asp-validation-for="Ime" class="text-danger"></span>
                <div class="invalid-feedback">Please enter the film name.</div>
            </div>
            <div class="form-group">
                <label asp-for="Zanr" class="control-label"></label>
                <select asp-for="Zanr" class="form-control" required>
                    <option value="">Select a genre</option>
                    @{
                        var genres = Html.GetEnumSelectList<Zanr>();
                        foreach (var genre in genres)
                        {
                            <option value="@genre.Value">@genre.Text</option>
                        }
                    }
                </select>
                <span asp-validation-for="Zanr" class="text-danger"></span>
                <div class="invalid-feedback">Please select a genre.</div>
            </div>
            <div class="form-group">
                <label asp-for="Trajanje" class="control-label"></label>
                <input asp-for="Trajanje" class="form-control" required />
                <span asp-validation-for="Trajanje" class="text-danger"></span>
                <div class="invalid-feedback">Please enter the duration.</div>
            </div>
            <div class="form-group">
                <label asp-for="Ocjena" class="control-label"></label>
                <input asp-for="Ocjena" class="form-control" required />
                <span asp-validation-for="Ocjena" class="text-danger"></span>
                <div class="invalid-feedback">Please enter the rating.</div>
            </div>
        

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

