@model IEnumerable<OOAD_G6_najjaci_tim.Models.Film>

@{
    ViewData["Title"] = "Proba";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="col-md-3">
    <h4>Žanrovi</h4>
    <ul>
        <li><a href="All">Svi</a></li>
        <li><a href="Horor">Horor</a></li>
        <li><a href="Akcija">Akcija</a></li>
        <li><a href="/Film/Index?genre=Drama">Drama</a></li>
        <li><a href="/Film/Index?genre=Komedija">Komedija</a></li>
        <!-- Dodajte ostale žanrove ovisno o potrebama -->
    </ul>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zanr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trajanje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ocjena)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zanr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trajanje)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ocjena)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
